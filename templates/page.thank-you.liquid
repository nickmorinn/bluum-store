<script>
  document.addEventListener("DOMContentLoaded", function() {
    var paymentLink = "{{ order.metafields.custom.payment_link }}";
    if (paymentLink) {
      var message = "<p>Click <a href='" + paymentLink + "' target='_blank'>here</a> to complete payment.</p>";
      document.querySelector(".order-summary__sections").insertAdjacentHTML("beforeend", message);
    }
  });

</script>

{% assign redirect_url = googleGemini_GenerateText.text %} 

{% if redirect_url %}
  <script>
    window.location.href = "{{ redirect_url }}";
  </script>
{% else %}
  <script>
    console.log("Redirect URL not available.");
  </script>
{% endif %}
